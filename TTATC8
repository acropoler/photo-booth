        pixels[0]=(255, 255, 0)
        pixels[11]=(255, 255, 0)
        pixels[1]=(255, 255, 0)
        pixels[10]=(255, 255, 0)        
        pixels[2]=(255, 255, 0)
        pixels[9]=(255, 255, 0)       
        pixels[3]=(255, 255, 0)
        pixels[8]=(255, 255, 0)
        pixels.show() 
        time.sleep(1)
        pixels[0]=(0, 255, 0)
        pixels[1]=(0, 255, 0)
        pixels[2]=(0, 255, 0)
        pixels[3]=(255, 255, 255)
        pixels[4]=(255, 255, 255)
        pixels[5]=(255, 255, 255)
        pixels[6]=(255, 255, 255)
