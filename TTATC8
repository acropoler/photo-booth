        pygame.display.update()
        list = os.listdir('/home/pi/Desktop/ttatc slides')
        number_files = len(list)
        image_name=str(number_files)
        camera.start_preview()
        pixels[0]=(255, 0, 0)
        pixels[11]=(255, 0, 0)
        pixels[1]=(255, 0, 0)
        pixels[10]=(255, 0, 0)
        pixels.show()
